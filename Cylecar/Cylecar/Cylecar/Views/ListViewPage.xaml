<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cylecar.Views.ListViewPage"
             Title="ListViewPage">
    <ListView x:Name="estaciones"  RowHeight="40" SeparatorVisibility="None"
                      Margin="20" SeparatorColor="Black" BackgroundColor="Transparent"
                      HeightRequest="200" >
        <ListView.ItemTemplate>

            <DataTemplate>
                <ViewCell>
                    
                        
                        <StackLayout>
                        <Label Text="{Binding Edificio}"></Label>
                        <Label Text="{Binding Descripcion}"></Label>
                        </StackLayout>
                        
                            
                        <!--<Label Text="{Binding Calle}" Grid.Row="2"></Label>
                        <Label Text="{Binding CodigoPostal}" Grid.Row="3"></Label>-->
                        
                   

                    
                        
                    
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ListView>
</ContentPage>